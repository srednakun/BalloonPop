<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenuActivity">

    <!--Background image: Photo by Gaelle Marcel on Unsplash-->
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:src="@drawable/balloon_background"
               android:scaleType="centerCrop"
               android:contentDescription="child holding balloons"
    />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Balloon Pop!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtTitle" android:textSize="36sp"
                android:layout_marginBottom="30sp" android:background="#FFFFFF"/>
        <Button
                android:text="Play Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnPlayGame" android:textSize="24sp"
                android:background="#8BC34A" android:onClick="onPlayGameClicked"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>